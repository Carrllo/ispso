#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    double a , b , c;
    a=2;
    b=3;
    c=4;
    printf ( "a=%d",a);   
    cout << endl;

    printf ( "b=%d",b);   
    cout << endl;

     printf ( "c=%d",c);   
    cout << endl;

    // pow(b,2) ---> b do potegi 2
    double delta = pow (b , 2) - (4 * a * c);

    if (delta < 0)
        cout << "Rownania nie da sie rozwiazac (delta jest ujemna).\n";
    else cout << "Rownanie da sie rozwiazac (delta dodatnia).\n";

    getchar();

    return 0;
}
